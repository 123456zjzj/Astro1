    color: #3d3d3d; /* 深灰文字 */
}

/* 头部样式 */
header {
    background: #fdebd0; /* 莫兰迪黄棕色 */
    text-align: center;
    padding: 1rem 0;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

header h1 {
    margin: 0;
    color: #5b4c49; /* 深棕色文字 */
}

/* 导航样式 */
nav {
    background: #fdebd0; /* 与头部背景一致 */
    text-align: center;
    padding: 0.5rem 0;
}

nav a {
    color: #5b4c49; /* 深棕色文字 */
    text-decoration: none;
    padding: 0.5rem 1rem;
    margin: 0 0rem;
    border-radius: 5px; /* 圆角边框 */
    transition: background-color 0.3s;
}

nav a:hover, nav a.active {
    background-color: #d9c2a5; /* 较深的莫兰迪黄棕色 */
}


/* 主要内容区域 */
main {
    padding: 2rem;
}

section {
    margin-bottom: 2rem;
    padding: 1rem;
    background: #ffffff; /* 白色背景 */
    border-radius: 8px; /* 圆角边框 */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 轻微阴影 */
}

section h2 {
    color: #5b4c49; /* 深棕色标题 */
    margin-bottom: 0.5rem;
}



/* 页脚样式 */
footer {
    background: #5b4c49; /* 深棕色背景 */
    color: #fdebd0; /* 黄棕色文字 */
    text-align: center;
    padding: 1rem 0;
}

footer p {
    margin: 0;
}


/* 响应式设计 */
@media (max-width: 768px) {
    nav a {
        display: block;
        margin: 0.5rem 0;
    }
}
